@model Coaching_Models.GroupeChat



<link href="~/Content/ChatStyle.css" rel="stylesheet" />


@using (Html.BeginForm())
{

    <div id="containerChat">
        <aside>

            <ul>

              @foreach (Coaching_Models.GroupeChat item in ViewBag.GroupeChats)


              {
                    <li>
                        <div>
                            <h2>@item.Nom</h2>
                            <h3>
                                <span class="status green"></span>
                                @item.Membres.Count() participants

                            </h3>

                        </div>

                    </li>

                }

                <li>
                    <div>
                        <p>
                            @Html.ActionLink("Ajouter un chat", "CreateNewChat" , "Communauté")
                            <br />
                            +
                        </p>
                    </div>

                </li>

            </ul>
        </aside>
        <main>
            <header>

                <div>
                    <h2>Chat : Admnistration</h2>

                </div>

            </header>
            <ul id="chat">

                @for (int i = 0; i < 2; i++)
                {

                    <li class="you">
                        <div class="entete">
                            <span class="status green"></span>
                            <h2>User 1</h2>
                            <h3>10:12AM, Today</h3>
                        </div>
                        <div class="triangle"></div>
                        <div class="message">
                            Ceci est un texte de chat
                        </div>
                    </li>


                }

                @for (int i = 0; i < 2; i++)
                {
                    <li class="me">
                        <div class="entete">
                            <h3>10:12AM, Today</h3>
                            <h2>User2</h2>
                            <span class="status blue"></span>
                        </div>
                        <div class="triangle"></div>
                        <div class="message">
                            Ceci est un autre texte de chat
                        </div>
                    </li>
                }


            </ul>
            <footer>
                @Html.TextAreaFor(model => model.ChatMessages, htmlAttributes: new { @class = "control-label col-md-2" })
                <a><input type="submit" value="Send" class="btn primary" /></a>

            </footer>
        </main>
    </div>

}