@model Coaching_Models.GroupeChat


<header>

    <div>
        <h2>Chat : @Model.Nom</h2>

    </div>

</header>
<ul id="chat">

    @for (int i = 0; i < Model.ChatMessages.Count ; i++)
    {

        if(Model.ChatMessages[i].Utilisateur.Id == (int)Session["user_id"])
        {

            <li class="me">
                <div class="entete">
                    <span class="status green"></span>
                    <h2>@Model.ChatMessages[i].Utilisateur.Pseudo</h2>
                    <h3>@Model.ChatMessages[i].Date</h3>
                </div>
                <div class="triangle"></div>
                <div class="message">
                    @Model.ChatMessages[i].MessageText
                </div>
            </li>

        }

        else
        {


            <li class="you">
                <div class="entete">
                    <h3>@Model.ChatMessages[i].Date</h3>
                    <h2>@Model.ChatMessages[i].Utilisateur.Pseudo</h2>
                    <span class="status green"></span>
                </div>
                <div class="triangle"></div>
                <div class="message">
                    @Model.ChatMessages[i].MessageText
                </div>
            </li>

       }
   }
</ul>