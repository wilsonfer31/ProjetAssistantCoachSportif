@model CoachSportif.Models.ViewModel.ViewModelVerificationMotDePasse

@{
    ViewBag.Title = "changePassword";

}

<h2>Modifier Mot de Passe : </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <div class="form-group">
            <label>Veuillez rentrer votre ancien Mot de Passe: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.AncienMotDePasse, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AncienMotDePasse, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="form-group">
          <label>Veuillez rentrer le nouveau Mot de Passe: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NouveauMotDePasse, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NouveauMotDePasse, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modifer" class="btn btn-default" />
        </div>
    </div>
</div>
}

